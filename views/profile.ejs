<div class="row mt-5">
    <div class="col-md-9 m-auto">
        <div class="card card-body">
            <%- include nav.ejs %>
            <h1 class="text-center mb-3">Profile</h1>
            <% include ./partials/messages %>
            <div class="row">
                <div class="text-center col-md-6">
                    <img src="/images/foamy.jpg" alt="Foamy the Squirrel" class="border rounded-sm">
                </div>
                <div class="col-md-6">
                    <section>
                        <dl>
                            <dt><span>Name</span></dt>
                            <dd><span><%= user.firstName %> <%= user.lastName %></span></dd>
                            <dt><span>Account Type</span></dt>
                            <dd><span><%= user.userType %></span></dd>
                            <dt><span>Email</span></dt>
                            <dd><span><%= user.email %></span></dd>
                            <dt><span>Phone</span></dt>
                            <dd><span><%= user.phone %></span></dd>
                        </dl>
                    </section>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-12">
                    <p><b>Summary</b></p>
                </div>
                <div class="col-md-12">
                    <p>Some description field that we should fill out if we want to be anything like the big guns.</p>
                </div>
            </div>
            <hr/>
            <a href="/addProfilePhoto" class="btn btn-primary col-md-4">Add Photo</a>
            <a href="/resume" class="btn btn-primary col-md-4">Add Resume</a>
            <a href="/editProfile" class="btn btn-primary col-md-4">Edit Details <i class="fas fa-edit"></i></a>
            <%- include footer.ejs %>
        </div> <!-- End card-body -->
    </div>
</div>